    "version": "0.2.0",
    "configurations": [
        // Windows
        {
            "name": "Debug Railguard (Windows)",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/Debug/railguard.exe",
            "console": "integratedTerminal",
            "preLaunchTask": "Build Railguard (Debug)",
            "cwd": "${workspaceFolder}/build",
        },
        {
            "name": "Debug Tests (Windows)",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/Debug/unit_tests.exe",
            "console": "integratedTerminal",
            "preLaunchTask": "Build Tests (Debug)",
            "cwd": "${workspaceFolder}/build",
        },
    ]
}