    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug (Windows)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/railguard.exe",
            "console": "integratedTerminal",
            "preLaunchTask": "Build with Ninja (Debug)",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/Debug/railguard",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "MIMode": "gdb",
            "miDebuggerPath": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build (Debug)",
        }
    ]
}